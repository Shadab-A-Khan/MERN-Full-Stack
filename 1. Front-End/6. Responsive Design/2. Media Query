html{
	font-size: 30px;
}
#div1{
   width: 60%;
   padding: 5px;
   border: 1px solid black;

}
@media screen and (max-width: 900px){
	#div1{
		width: 90%;
	}
}

@media screen and (max-width: 600px){
	#div1{
		width:100%;
	}
	
}

