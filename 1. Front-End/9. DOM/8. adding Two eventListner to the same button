--------script.js------------



        function sayHello(){
          alert('Hello!!');
        }

        function sayBye(){
          alert('Bye!!');
        }

        var callHello=document.getElementById('btn2');
        
        
        
        callHello.addEventListener('click',sayHello);
        callHello.addEventListener('click',sayBye);
        
        
        
        
