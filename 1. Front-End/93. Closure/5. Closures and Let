______________________________________________________




for(var i=1 ; i<=5 ; i++){
   setTimeout(function(){
      console.log(i);
   },1000);
}

console.log(i);

-------------
output:
6
6
6
6
6
6
-------------



______________________________________________________



for(let i=1 ; i<=5 ; i++){
   setTimeout(function(){
      console.log(i);
   },1000);
}



-------------
output:
1
2
3
4
5
-------------



******************

for(let i=1 ; i<=5 ; i++)    //in case of let each
                             //complete itteration 
                             //has a seperate i value

{
   setTimeout(function(){
      console.log(i);
   },1000);
}

