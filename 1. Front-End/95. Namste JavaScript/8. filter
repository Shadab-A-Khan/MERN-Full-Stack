

//______________________________________________________________________

// Filte
// Filter is used to filter out the values inside the array
// like you can use a filer the odd values from the array
// or you can use it to filer the even values from an array




//to find odd
const arr=[5, 1, 3, 2, 6];

function isOdd(x){
    return x%2;
}
const ouput=arr.filter(isOdd);
console.log(ouput);

// -------------
// ouput:
// [ 5, 1, 3 ]
// -------------





//to find the even
const arr1=[5, 1, 3, 2, 6];
function isEven(x){
    return x%2===0;
}

const ouputEven=arr1.filter(isEven);
console.log(ouputEven)

// -------------
//ouput:
//[ 2, 6 ]
//-------------






//to find greater then 4

const arr2=[5, 1, 3, 2, 4 , 6];
function isGreaterthen(x){
    return x>4;
}
const ouput2=arr2.filter(isGreaterthen);
console.log(ouput2);

           //or

//you can pass the fuction as argument
const arr2=[5, 1, 3, 2, 4 , 6];

const ouput2=arr2.filter(function isGreaterthen(x){
    return x>4;
});
console.log(ouput2);

           //or

//converting to arrow funtion
const arr2=[5, 1, 3, 2, 4 , 6];

const ouput2=arr2.filter((x)=>{
    return x>4;
});
console.log(ouput2);

          //or 

//can also be writen as
const arr2=[5, 1, 3, 2, 4 , 6];

const ouput2=arr2.filter((x)=> x>4);
console.log(ouput2);





// -------------
// ouput:
// [ 5, 6 ]
// -------------


//______________________________________________________________________

