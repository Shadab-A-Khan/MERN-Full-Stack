<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/home.css">
        <script src="https://kit.fontawesome.com/ed54348148.js" crossorigin="anonymous"></script>
    </head>
    <body>
        
        <h1 id="page-heading" >
            <i class="fa-solid fa-address-book"></i> 
            My Contact List
        </h1>

         <div>
            <ul>
                <% for( let i of contactList) {%>
                   <li class="contact-style"> 
                      <p id="details"> <%= i.name %> </p> 
                      <p id="details1"> <%= i.phone %> </p>

                      <div class="delete-button">
                        <a href="/delete-contact/?phone=<%= i.phone %>">
                          <i class="fas fa-window-close"></i>
                        </a>
                    </div>

                   </li> 

                   
                <% } %>
            </ul>
         </div>


         <form action="create-contact" method="post" >
            <input class="form" type="text" name="name" , placeholder="Enter Name" required>
            <input class="form"  type="text" name="phone", placeholder="Enter Phone Number" required>

            <button class="form" type="submit"> Add Contact</button>
         </form>
         <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>